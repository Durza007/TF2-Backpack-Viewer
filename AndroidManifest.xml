<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minder.app.tf2backpack"
    android:installLocation="auto"
    android:versionCode="62"
    android:versionName="1.6" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="13" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.minder.app.tf2backpack.App"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.DashBoard"
            android:launchMode="singleTop" >
        </activity>
        <activity android:name=".frontend.Backpack" >
            <intent-filter>
                <action android:name="com.minder.app.tf2backpack.VIEW_BACKPACK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".frontend.Settings" >
        </activity>
        <activity
            android:name=".frontend.GetPlayer"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="com.minder.app.tf2backpack.GET_STEAMID" />
                <action android:name="com.minder.app.tf2backpack.SET_STEAMID" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.SelectBackpack"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".frontend.WeaponInfo"
            android:theme="@style/InfoDialog" >
        </activity>
        <activity
            android:name=".frontend.PlayerListActivity">
            <intent-filter>

                <!-- <action android:name="android.intent.action.SEARCH" /> -->
                <action android:name="com.minder.app.tf2backpack.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.minder.app.tf2backpack.frontend.DashBoard"  />
        </activity>
        <activity
            android:name=".frontend.NewsList"
            android:configChanges="orientation" >
        </activity>

        <!-- declare the default searchable Activity for the whole app -->
        <!--
          <meta-data android:name="android.app.default_searchable"
               android:value=".PlayerList" />
        -->


        <!-- ADMOB -->
        <!-- The application's publisher ID assigned by AdMob -->


        <!--
          <activity android:name="com.google.ads.AdActivity"
             android:configChanges="keyboard|keyboardHidden|orientation"/>
        -->
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <!-- fix for memory problem in admob -->

        <activity
            android:name=".frontend.AdMobActivity"
            android:launchMode="singleInstance" />

        <!-- ADMOB END -->

        <activity
            android:name=".Changelog"
            android:alwaysRetainTaskState="false"
            android:excludeFromRecents="true"
            android:stateNotNeeded="true"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="com.minder.app.tf2backpack.CHANGELOG" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".frontend.ItemGridViewer" >
            <intent-filter>
                <action android:name="com.minder.app.tf2backpack.VIEW_ITEM_LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ItemListSelect" >
        </activity>

        <service android:name=".GameSchemeDownloaderService" >
            <intent-filter>
                <action android:name="com.minder.app.tf2backpack.DOWNLOAD_GAMEFILES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>

</manifest>