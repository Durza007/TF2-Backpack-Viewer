<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutBackpack"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color" >

    <HorizontalScrollView
        android:id="@+id/HorizontalScrollViewBackpack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutControls"
        android:layout_alignParentTop="true" >

        <com.minder.app.tf2backpack.BackpackView
            android:id="@+id/TableLayoutBackPack"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadeScrollbars="true" >
        </com.minder.app.tf2backpack.BackpackView>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutControls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical" >

        <Button
            android:id="@+id/buttonNew"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="@string/new_ungiven_item"
            android:visibility="gone" >
        </Button>

        <include
            android:id="@+id/includeAd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/ad" >
        </include>

        <Button
            android:id="@+id/ButtonPrevious"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:width="50dp" >
        </Button>

        <TextView
            android:id="@+id/TextViewPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="1/6"
            android:textColor="@color/backpack_text"
            android:textSize="34dp"
            android:width="110dp" >
        </TextView>

        <Button
            android:id="@+id/ButtonNext"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:width="50dp" >
        </Button>
    </LinearLayout>

</RelativeLayout>