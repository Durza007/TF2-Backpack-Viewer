<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutItem"
    android:layout_width="wrap_content"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/text2"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceLarge" android:minHeight="?android:attr/listPreferredItemHeight">

    </TextView>

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:scaleType="fitXY" 
        android:layout_alignParentLeft="true" 
        android:padding="3dp" 
        android:src="@drawable/avatar_64blank" 
        android:minWidth="?android:attr/listPreferredItemHeight"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dip"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <ImageView
        android:id="@+id/imageViewState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewAvatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageViewAvatar"
        android:scaleType="fitXY"
        android:src="@drawable/avatar_border_offline"
        android:visibility="visible" android:adjustViewBounds="false"/>

</RelativeLayout>
